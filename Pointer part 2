// NULL POINTER


// NULL pointer
 #include<iostream>
 using namespace std;
 int main()
 {
     
     int* ptr = NULL;// reserved address
     cout<<ptr;
 }

 // DOUBLE POINTER

#include<iostream>
 using namespace std ;
 int main()
 {
   int x=9;
   int* p1=&x;
   int** p2=&p1;
   
   cout<<x<<endl;
   cout<<p1<<endl;
   cout<<p2;
 }
  
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
